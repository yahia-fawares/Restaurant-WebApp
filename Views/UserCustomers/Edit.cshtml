    ViewData["Title"] = "Edit";
    Layout = "~/views/shared/AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>UserCustomer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
